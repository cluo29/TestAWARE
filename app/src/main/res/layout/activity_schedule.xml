<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Schedule Replay Tasks"
        android:id="@+id/textSchedule1"
        android:padding="16dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/buttonSchedule1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/buttonSchedule2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonSchedule1"
        android:layout_marginStart="39dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSchedule"
        android:layout_above="@+id/buttonSchedule1"
        android:layout_alignStart="@+id/textSchedule1"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set Speed (e.g., 2.0)"
        android:id="@+id/textViewSchedule2"
        android:layout_above="@+id/editTextSchedule"
        android:layout_alignStart="@+id/textSchedule1"
        android:layout_marginStart="25dp"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewSchedule"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textSchedule1"
            android:layout_above="@+id/buttonSchedule1"
            />

    </RelativeLayout>
